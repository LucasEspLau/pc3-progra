@model List<pc3_progra.Integration.Entity.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Ir a Perfil</th>
            <th>ID</th>
            <th>Email</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Avatar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><a href="@Url.Action("Perfil", new { Id = user.Id })">Ir a Perfil</a></td>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.Nombre</td>
                <td>@user.Apellido</td>
                <td>
                    @if (!string.IsNullOrEmpty(user.Avatar))
                    {
                        <img src="@user.Avatar" alt="Avatar" style="width:50px; height:50px;" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
